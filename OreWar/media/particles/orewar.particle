particle_system Orewar/CamStarField
{
    material Orewar/Flare
    particle_width 25
    particle_height 25
    cull_each true
    quota 2800
    billboard_type point

    // Area emitter
    emitter Box
    {
        width 10000
        height 10000
        depth 10000
        angle 360
        emission_rate 700
        time_to_live 4
        velocity_min 0
        velocity_max 15
        colour 0 0 0
    }

    affector ColourFader2
    {
        state_change 1
        
        red1 1
        green1 1
        blue1 1
        
        red2 -0.333
        green2 -0.333
        blue2 -0.333
    }
}

particle_system Orewar/EngineStream
{
    material Orewar/Flare
    particle_width 50
    particle_height 50
    cull_each false
    quota 20
    billboard_type point

    // Area emitter
    emitter Point
    {
        angle 10
        emission_rate 20
        time_to_live 1
        direction 0 0 1
        velocity_min 400
        velocity_max 600
        colour 0.2 0.6 1
    }

    affector ColourInterpolator
    {
        time0 0
        colour0 0.2 0.6 1 1
        
        time1 1
        colour1 1 0.9 0.05 1
    }
}

